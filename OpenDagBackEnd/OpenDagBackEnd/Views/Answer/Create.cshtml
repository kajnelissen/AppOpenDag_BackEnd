@model OpenDagBackEnd.Models.Answer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Answer</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionId, "Question")
        </div>
        <div class="editor-field">
            @Html.DropDownList("QuestionId", String.Empty)
            @Html.ValidationMessageFor(model => model.QuestionId)
        </div>
        <p>

        <table>
            @for (int index = 0; index < ViewBag.Studies.Count; index++ )
            {
               <tr>
                   <th>
                        @ViewBag.Studies[index].Name
                   </th>
                   <th>
                        @Html.TextArea("tbScore" + index, null, new { cols = "15", rows = "1" })
@*                        <asp:RequiredFieldValidator ID="'tbScore' + @index" runat="server" 
                             ControlToValidate="topic" ErrorMessage="Score ontbreekt bij @ViewBag.Studies[index].Name" ForeColor="Red">*</asp:RequiredFieldValidator>*@
                   </th>
               </tr>
            }
        </table>    
        </p>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
